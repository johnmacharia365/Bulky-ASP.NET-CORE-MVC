@page
@model BulkyWebRazor.Pages.Categories.CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger">
           
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="category.Name"  class="p-0"></label>
            <input asp-for="category.Name" class="form-control" />
            <span asp-validation-for="category.Name" style="color:red"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="category.DisplayOrder" class="p-0"></label>
            <input asp-for="category.DisplayOrder" class="form-control" />
            <span asp-validation-for="category.DisplayOrder" style="color:red"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
       
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-dark form-control border">Back</a>
            </div>
        </div>
      
        
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    
}