@page
@model BulkyWebRazor.Pages.Categories.IndexModel



<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">CATEGORY LIST</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-page="/Categories/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>Create New Category
        </a>
    </div>
</div>

<table class="table table-bordered table-striped table-responsive-log">
    <thead>
        <tr>
            <th>Name</th>
            <th>Order Number</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CategoryList.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@item.Id" class="btn btn-primary mx-3">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/delete" asp-route-id="@item.Id" class="btn btn-danger mx-3">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


