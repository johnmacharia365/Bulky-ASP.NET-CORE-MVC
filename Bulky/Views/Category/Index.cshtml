@model List<Category>

<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">CATEGORY LIST</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>Create New Category
        </a>
    </div>
</div>

<div class="card shadow border-0 mt-4">

   
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">

              

<table class="table table-bordered table-striped table-responsive-log">
    <thead>
        <tr>
            <th>Name</th>
            <th>Order Number</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
   <tbody>
        @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-3"><i class="bi bi-pencil-fill"></i> Edit</a>
                    </div> 
                    </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-danger mx-3"> <i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
   </tbody>
</table>
</div>
</form>
</div>
</div>
